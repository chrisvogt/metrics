{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [],
    "runtime": "nodejs18",
    "source": "functions",
    "options": {
      "memory": "256MB",
      "timeoutSeconds": 60
    }
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  }
}
