{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "port": 5020,
    "predeploy": [],
    "runtime": "nodejs24",
    "source": "functions",
    "codebase": "default"
  },
  "hosting": {
    "public": "hosting/dist",
    "rewrites": [
      {
        "source": "/api/**",
        "function": "app"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 8084,
      "host": "metrics.dev-chrisvogt.me"
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
